<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.paradrops.materialtypographysample.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/Display4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Light 112sp"/>

            <TextView
                style="@style/Display3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regular 56sp"/>

            <TextView
                style="@style/Display2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regular 45sp"/>

            <TextView
                style="@style/Display1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regular 34sp"/>

            <TextView
                style="@style/HeadLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regular 24sp"/>

            <TextView
                style="@style/Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium 20sp"/>

            <TextView
                style="@style/Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regular 16sp"/>

            <TextView
                style="@style/Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium 14sp"/>

            <TextView
                style="@style/Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regular 14sp"/>

            <TextView
                style="@style/Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regular 12sp"/>

            <TextView
                style="@style/Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium (All Caps) 14sp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
